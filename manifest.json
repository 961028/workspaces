{
  "manifest_version": 2,
  "name": "Workspace Manager",
  "version": "1.0",
  "description": "Automatically save and restore browser windows as workspaces.",
  "permissions": ["tabs", "storage", "unlimitedStorage", "windows", "menus", "contextMenus", "tabGroups"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
    "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }
}
